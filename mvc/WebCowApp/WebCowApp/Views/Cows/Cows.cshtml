@model IEnumerable<WebCowApp.Models.CowVM>

@{
                /**/

                ViewBag.Title = "Cows";
}

<h2>Cows</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PicturePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BreedName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfArrival)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VetID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalfCount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img class="cowPicture"
                     src="https://oldmooresalmanac.com/wp-content/uploads/2017/11/cow-2896329_960_720-Copy.jpg"
                     alt="Image of Cow" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BreedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfArrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VetID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalfCount)
            </td>
            <td>
                @*<button onclick="printMilkDetails(@item.CowID)" class="btn btn-xs btn-info">Milk Details</button>*@
                <button onclick="editPhoto(@item.CowID)" class="btn btn-xs btn-success">Edit Photo</button>
                @Html.ActionLink("Milking Data", "ModalMilkDetails", "Cows", new { id = item.CowID }, new
                {
                    @class = "btn btn-xs btn-info",
                    data_target = "#modal-container",
                    data_toggle = "modal"
                })
            </td>
        </tr>
    }
</table>

