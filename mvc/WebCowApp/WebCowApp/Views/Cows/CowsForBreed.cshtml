@model IEnumerable<WebCowApp.Models.CowVM>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PicturePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BreedName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfArrival)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VetID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalfCount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.PicturePath != null)
                {
                    <img class="cowPicture"
                     src="~/Content/Images/@item.PicturePath"
                     alt="Image of Cow" />
                }
                else
                {
                    <p class="cowPicture">NO IMAGE</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BreedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfArrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VetID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalfCount)
            </td>
            <td>
                @Html.ActionLink("Edit Photo", "EditPicture", new { id = item.CowID }, new { @class = "btn btn-xs btn-success" })
                @Html.ActionLink("Milking Data", "ModalMilkDetails", "Cows", new { id = item.CowID }, new
                {
                    @class = "btn btn-xs btn-info",
                    data_target = "#modalMilkDetails",
                    data_toggle = "modal"
                })
            </td>
        </tr>
    }
</table>
